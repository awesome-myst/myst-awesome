{
  "name": "@awesome-myst/myst-astro-collections",
  "version": "1.0.0",
  "description": "Astro content collections for MyST projects",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./collections": {
      "types": "./dist/collections.d.ts",
      "import": "./dist/collections.js"
    },
    "./loaders": {
      "types": "./dist/loaders.d.ts",
      "import": "./dist/loaders.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "node tests/test-yaml-loader.mjs"
  },
  "keywords": [
    "astro",
    "myst",
    "content-collections",
    "documentation"
  ],
  "author": "Matt McCormick",
  "license": "Apache-2.0",
  "dependencies": {
    "@awesome-myst/myst-zod": "^0.6.0",
    "@types/node": "^24.2.0",
    "astro": "^5.12.8",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "typescript": "^5.8.3"
  }
}
