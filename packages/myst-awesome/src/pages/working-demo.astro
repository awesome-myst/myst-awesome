---
/**
 * Working Component Override Demo
 * This demonstrates component overrides using a direct approach
 */
import BasePage from '../layouts/BasePage.astro';
import CustomNavigationMenu from '../custom/CustomNavigationMenu.astro';
import CustomTableOfContents from '../custom/CustomTableOfContents.astro';

// Simple test data
const navItems = [
  {
    title: "Test Section",
    icon: "folder",
    children: [
      { title: "Overview", href: "/working-demo#overview", current: true, badge: "Current" },
      { title: "Examples", href: "/working-demo#examples", badge: "New", badgeVariant: "success" }
    ]
  }
];

const tocItems = [
  { level: 2, title: "Overview", href: "#overview", id: "overview" },
  { level: 2, title: "Custom Components", href: "#custom-components", id: "custom-components" },
  { level: 2, title: "Examples", href: "#examples", id: "examples" }
];
---

<BasePage title="Working Demo">
  <!-- Use navigation slot -->
  <CustomNavigationMenu 
    slot="navigation" 
    items={navItems}
    showSearch={false}
    showIcons={true}
  />

  <!-- Use aside slot -->
  <CustomTableOfContents 
    slot="aside"
    items={tocItems}
    title="Demo TOC"
    sticky={true}
    showNumbers={true}
  />

  <!-- Main content goes to the default slot -->
  <div>
    <h1>Working Demo</h1>
    
    <h2 id="overview">Overview</h2>
    <p>This page demonstrates custom component overrides using BasePage directly.</p>

    <h2 id="custom-components">Custom Components</h2>
    <p>The navigation and table of contents on this page are using custom components.</p>

    <h2 id="examples">Examples</h2>
    <p>You can see the custom styling and enhanced features in the sidebar components.</p>
  </div>
</BasePage>

<script>
  // Import Web Awesome components needed for tests
  import '@awesome.me/webawesome/dist/components/callout/callout.js';
  import '@awesome.me/webawesome/dist/components/tab-group/tab-group.js';
  import '@awesome.me/webawesome/dist/components/tab/tab.js';
  import '@awesome.me/webawesome/dist/components/tab-panel/tab-panel.js';
</script>
