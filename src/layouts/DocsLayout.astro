    font-weight: var(--wa-font-weight-semibold);
    color: var(--wa-color-text-quiet);
    margin: 0;
  }

  .toc-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .toc-item {
    margin-bottom: var(--wa-space-3xs);
  }

